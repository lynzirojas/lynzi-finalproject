{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <h1 class="detail-title">About {{ members.name }}</h1>
  <div class="row">
    <div class="col-sm-4 biodata">
      <div class="container">
        <div id="carousel" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="../assets/img/members/{{ members.imagebw }}" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="../assets/img/members/{{ members.image }}" alt="Second slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <dl>
        <dt>Name:</dt>
        <dd>{{ members.name }}</dd>
        <dt>Instruments:</dt>
        <dd>{{ members.instruments }}</dd>
        <dt>Tenure:</dt>
        <dd>{{ members.tenure }}</dd>
        <dt>Birthplace:</dt>
        <dd>{{ members.birthplace }}</dd>
        <dt>Birthdate:</dt>
        <dd>{{ members.birthdate }}</dd>
      </dl>
    </div>
    <div class="col-sm-8 member-story">
      <p>{{ members.text | safe }}</p>
    </div>
  </div>
</article>
{% endblock %}
